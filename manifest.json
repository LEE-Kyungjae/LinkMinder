{
  "manifest_version": 3,
  "name": "LinkMinder",
  "description": "활성 탭을 빠르게 저장하고 자동 분류·태그까지 도와주는 개인용 링크 보관소",
  "version": "0.1.0",
  "action": {
    "default_title": "LinkMinder",
    "default_popup": "pages/popup.html",
    "default_icon": {
      "128": "hello_extensions.png"
    }
  },
  "options_page": "pages/options.html",
  "icons": {
    "128": "hello_extensions.png"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "tabs",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "commands": {
    "save-current-tab": {
      "suggested_key": {
        "default": "Alt+Shift+S"
      },
      "description": "현재 탭을 LinkMinder에 저장"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/index.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
